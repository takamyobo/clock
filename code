<body>
    <div class="timer">
        <div class="time" id="display">00:00</div>
        <div class="controls">
            <button class="start" onclick="startTimer()">‚ñ∂</button>
            <button class="pause" onclick="pauseTimer()">‚è∏</button>
            <button class="reset" onclick="resetTimer()">üîÑ</button>
        </div>
    </div>
    <script>
        let timer;
        let timeLeft = 0;
        let running = false;
        
        function startTimer() {
            if (!running) {
                running = true;
                timer = setInterval(() => {
                    timeLeft++;
                    updateDisplay();
                }, 1000);
            }
        }
        
        function pauseTimer() {
            clearInterval(timer);
            running = false;
        }
        
        function resetTimer() {
            clearInterval(timer);
            running = false;
            timeLeft = 0;
            updateDisplay();
        }
        
        function updateDisplay() {
            const minutes = String(Math.floor(timeLeft / 60)).padStart(2, '0');
            const seconds = String(timeLeft % 60).padStart(2, '0');
            document.getElementById("display").textContent = `${minutes}:${seconds}`;
        }
    </script>
